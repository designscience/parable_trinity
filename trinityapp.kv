#:kivy 1.9.1

<UserInterface>:
    id: main_ui


<HomeScreen>:
    id: home_screen
    canvas.before:
        Color:
            rgba: 0, 0, 0, 1
        Rectangle:
            size: self.size
            pos: self.pos
#    Button:
#        size_hint: 0.2, 0.05
#        pos_hint: {'center_x': 0.5, 'y': 0.02}
#        id: activate_button
#        text: 'play show'
#        size: self.parent.width, self.parent.height
#        on_press: root.app.start_the_show()
    StackLayout:
        id: light_panel
        padding: 10, 10
        size_hint: None, None
        size: '1820px', '120px'
        pos_hint: {'center_x': 0.5, 'top': 0.98}
    StackLayout:
        id: sequence_panel
        canvas.before:
            Color:
                rgba: 0, 0, 0, 1
            Rectangle:
                size: self.size
                pos: self.pos
        padding: 10, 10
        spacing: 20
        size_hint: 0.98, 0.4
        pos_hint: {'center_x': 0.5}
        y: self.parent.height * 0.98 - light_panel.height - 20 - self.height
    FloatLayout:
        id: show_panel
        canvas.before:
            Color:
                rgba: 0, 0.15, 0.2, 1
            Rectangle:
                size: self.size
                pos: self.pos
        padding: 10, 10
        spacing: 30
        size_hint: 0.98, 0.4
        pos_hint: {'center_x': 0.5}
        y: self.parent.height * 0.98 - light_panel.height - 40 - sequence_panel.height - self.height
        BoxLayout:
            id: show_controls
#            canvas.before:
#                Color:
#                    rgba: 0, 0, 0, 1
#                Rectangle:
#                    size: self.size
#                    pos: self.pos
            size_hint: 1, .1
            y: show_panel.height + show_panel.y - self.height
            x: show_panel.x
            spacing: 20
            Button:
                id: prev_button
                text: 'prev'
                on_press: root.app.on_show_control_button(self.text)
            ToggleButton:
                id: play_button
                text: 'PLAY'
                on_press: root.app.on_show_control_button(self.text, self.state)
            Button:
                id: next_button
                text: 'next'
                on_press: root.app.on_show_control_button(self.text)
            BoxLayout:
                id: recorder_panel
                Button:
                    id: record_button
                    text: 'record'
                    background_color: 1, 0, 0, 1
                    on_press: root.app.on_recorder_button(self.text)
                Button:
                    id: discard_button
                    text: 'discard'
                    on_press: root.app.on_recorder_button(self.text)
                Button:
                    id: accept_button
                    text: 'accept'
                    on_press: root.app.on_recorder_button(self.text)
                Button:
                    id: commit_button
                    background_color: 0, 1, 0, 1
                    text: 'commit'
                    on_press: root.app.on_recorder_button(self.text)
        StackLayout:
            id: show_list
            size_hint: 1, None
            height: show_panel.height - show_controls.height - 20
            y: show_panel.y
            x: show_panel.x
            orientation: 'tb-lr'
            spacing: 5

    FloatLayout:
        id: beat_controls
        size_hint: 0.3, 0.08
        Image:
            id: beat_light
            x: 20
            top: 124
            source: 'images/svp_100.jpg'
            size_hint: None, None
            size: '100px', '94px'
        Button:
            id: tap_beat
            size_hint: None, None
            text: 'TAP'
            size: '280px', '120px'
            top: 130
            x: 164
            background_color: .6, .6, .6, 1
            on_press: root.app.on_tap_press()
        Button:
            id: btn_align
            size_hint: None, None
            text: 'Align'
            size: '280px', '120px'
            top: 130
            x: 500
            background_color: .6, .6, .6, 1
            on_press: root.app.on_align_press()
        ToggleButton:
            id: use_beat
            size_hint: None, None
            text: 'Use Beat'
            size: '180px', '80px'
            top: 110
            x: 900
            background_color: .4, .4, .4, 1
            on_state: root.app.on_use_beat(self)
        Button:
            id: kill
            size_hint: None, None
            text: 'kill'
            size: '780px', '120px'
            top: 130
            x: 1200
            background_color: 1, 0, .2, 1
            on_press: root.app.on_kill_press()

<ChannelLight>:
    size_hint: None, None
    size: 100, 100
    Image:
        id: pilot
        source: ''
        left: 0
    Image:
        id: flame
        source: ''
        left: 0

<SequenceButton>:
    text: ''
    size_hint: 0.12, 0.12
#    height: '130px'
#    width: '290px'
    color: 1, 1, 1, 1
    background_color: 0.3, 0.3, 0.3, 1
    on_press: self.app.seq_btn_down(self)
    on_release: self.app.seq_btn_up(self)

<ShowListItem>:
    size_hint: 1, 0.06
#    ToggleButton:
#        size_hint: None, 1
#        width: self.parent.width * 0.06
    Label:
        id: item_type
        halign: 'left'
        valign: 'middle'
        text: '???'
        text_size: self.size
        texture:
        width: self.parent.width * 0.14
        y: self.parent.y
    Label:
        id: media_file
        halign: 'left'
        valign: 'middle'
        text: 'my file'
        text_size: media_file.size
        texture:
        width: self.parent.width * 0.7
        y: self.parent.y
    Button:
        id: btn_record
        text: 'record'
        size_hint: None, 1
        width: self.parent.width * 0.1
        on_press: root.app.initiate_recording(root.item_index)

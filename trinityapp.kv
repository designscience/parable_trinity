#:kivy 1.9.1

<UserInterface>:
    id: main_ui


<HomeScreen>:
    id: home_screen
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            size: self.size
            pos: self.pos
    Button:
        size_hint: 0.2, 0.1
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
        id: activate_button
        text: 'help me'
        size: self.parent.width, self.parent.height
    StackLayout:
        id: light_panel
        canvas.before:
            Color:
                rgba: 1, 1, 1, 1
            Rectangle:
                size: self.size
                pos: self.pos
        size_hint: None, None
        size: '1800px', '100px'
        pos_hint: {'center_x': 0.5, 'top': 0.98}

<ChannelLight>:
    canvas.before:
        Color:
            rgba: 1, 1, 1, 0.5
        Rectangle:
            pos: self.pos
            size: self.size
    size_hint: None, None
    size: 100, 100
    Image:
        id: flame
        source: ''
        left: 0





